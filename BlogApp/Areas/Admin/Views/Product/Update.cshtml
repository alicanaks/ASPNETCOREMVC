 @model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">UPDATE</div>
</div>

<form method="post" asp-area="Admin" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">

        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
        </select>


    </div>




    <div class="form-group my-3">

        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control">

    </div>

    <div class="form-group my-3">

        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control">

    </div>

    <div class="form-group  my-3">

        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control">

    </div>

    <div class="form-check form-switch my-3">
        <input asp-for="Showcase" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" role="switch"/>
        <label class="form-check-label" for="flexSwitchCheckDefault">ShowCase</label>

    </div>

    <div class="form-group my-3 ">
         <img src="@Model?.ImageUrl" width="250" class="rounded shadow"/> 

    </div>

    <div class="form-group  my-3">

        <label asp-for="ImageUrl"></label> 
        <input type="file" name="file" class="form-control">

    </div>

    <div class="form-group  my-3">

        <button type="submit" class="btn btn-primary my-3">Update</button>

    </div>










</form>